<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <EditText
            android:id="@+id/customdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Title 입력"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/customdialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="포스터 설명 입력"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/customdialog_hashtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="#해시태그 입력"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:textSize="20sp" />

        <Button
            android:id="@+id/customdialog_OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"
            app:backgroundTint="@color/light_gray1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>